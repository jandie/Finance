@using Library.Classes
@using Library.Interfaces

@{
    IPayment payment = ViewBag.Payment as IPayment;
    List<Transaction> transactions = ViewBag.Transactions as List<Transaction>;

    ViewBag.Title = $"{ViewBag.Type} {payment?.Name}";
}

<h2>@ViewBag.Title</h2>

@if (payment != null)
{
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm())
            {
                <input type="hidden" class="form-control" name="id" aria-describedby="basic-addon3" value="@payment.Id">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="name" name="name" aria-describedby="basic-addon3" value="@payment.Name" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="balance">Amount:</label>
                    <div class="input-group">
                        <input type="number" class="form-control" id="balance" name="amount" aria-describedby="basic-addon3" value="@payment.Amount" required>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Change
                    </button>
                </div>

                <div class="form-group">
                    <a class="btn btn-danger" href="~/Manage/DeletePayment?id=@payment.Id" role="button">Delete</a>
                </div>
            }
        </div>
    </div>
    if (transactions != null)
    {
         <div class="row">
             <div class="col-md-12">
                 <table class="table table-hover">
                     <thead>
                     <tr>
                         <th>Amount</th>
                         <th>Description</th>
                         <th></th>
                     </tr>
                     </thead>

                     <tbody>
                     @foreach (Transaction t in transactions)
                     {
                         <tr>
                             <td>@t.Amount.ToString("0.00")</td>
                             <td>@t.Description</td>
                             <td>
                                 <a class="btn btn-primary" href="~/Manage/Transaction?id=@t.Id&paymentId=@payment.Id&paymentType=@ViewBag.Type" role="button">Manage</a>
                             </td>
                         </tr>
                     }
                     </tbody>
                 </table>
             </div>
         </div>
     }
}
else
{
    <p>There is no balance available</p>
}
