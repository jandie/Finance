@using Library.Classes
@using Library.Classes.Language

@{
    Language language = Session["Language"] as Language;

    ViewBag.Title = language.GetText(61);

    Balance balance = ViewBag.Balance as Balance;
}

<h2>@ViewBag.Title</h2>

@if (balance != null)
{
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("ChangeBalance", "Manage"))
            {
                <input type="hidden" class="form-control" name="id" aria-describedby="basic-addon3" value="@balance.Id">
                <div class="form-group">
                    <label for="name">@language.GetText(19)</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="name" name="name" aria-describedby="basic-addon3" value="@balance.Name" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="balance">@language.GetText(22)</label>
                    <div class="input-group">
                        <input type="number" step="any" class="form-control" id="balance" name="balanceAmount" aria-describedby="basic-addon3" value="@balance.BalanceAmount" required>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        @language.GetText(2)
                    </button>
                </div>

                <div class="form-group">
                    <a class="btn btn-danger" href="~/Manage/DeleteBalance?id=@balance.Id&lastTab=1" role="button">@language.GetText(30)</a>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>There is no balance available</p>
}
