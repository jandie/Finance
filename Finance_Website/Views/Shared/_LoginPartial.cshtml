@using Library.Classes
@using Library.Classes.Language

@{
    Language language = Session["Language"] as Language;

    ViewBag.Title = "_LoginPartial";
}


@if (Session["user"] is User)
{
    var user = Session["user"] as User;

    <ul class="nav navbar-nav navbar-right">
        <li class="">@Html.ActionLink($"{user.Name}'s {language.GetText(9)}", "Index", "Account", new { area = "" }, new { @class = "primary-content" })</li>
        <li class="navbar-content">@Html.ActionLink(language.GetText(10), "Loguit", "Account", new { area = "" }, new { @class = "primary-content" })</li>
    </ul>

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-content">@Html.ActionLink(language.GetText(3), "Login", "Account", new { area = "" }, new { @class = "primary-content" })</li>
        <li class="navbar-content">@Html.ActionLink(language.GetText(8), "Register", "Account", new { area = "" }, new { @class = "primary-content" })</li>
    </ul>
}

