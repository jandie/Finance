@using Finance_Website.Models.Utilities
@using Library.Classes
@using Library.Classes.Language
@using Library.Interfaces
@{
    UserUtility userUtility = Session["UserUtility"] as UserUtility;
    Language language = userUtility.Language;
}
<div class="modal fade" id="AddBalanceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header primary-background">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title primary-content" id="myModalLabel">@language.GetText(26)</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        @using (Html.BeginForm("AddBalance", "Action"))
                        {
                            <input type="hidden" class="form-control" name="lastTab" aria-describedby="basic-addon3" value="1">
                            <div class="form-group">
                                <label for="name">@language.GetText(19)</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="name" name="name" aria-describedby="basic-addon3" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="balance">@language.GetText(22)</label>
                                <div class="input-group">
                                    <input type="number" step="any" class="form-control" id="balance" name="balance" aria-describedby="basic-addon3" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    @language.GetText(1)
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@language.GetText(24)</button>
            </div>
        </div>
    </div>
</div>

