<div class="modal fade" id="QuickTransaction" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header primary-background">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title primary-content" id="myModalLabel">@language.GetText(25)</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        @using (Html.BeginForm("AddTransaction", "Action"))
                        {
                            <div class="form-group">
                                <label for="balance">@language.GetText(21)</label>
                                <select class="form-control" name="balanceId" id="balance">
                                    @foreach (Balance balance in (ViewBag.User as User).Balances)
                                    {
                                        <option value="@balance.Id">@balance.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="payent">@language.GetText(23)</label>
                                <select class="form-control" name="paymentId" id="payent">
                                    @foreach (IPayment payment in (ViewBag.User as User).Payments)
                                    {
                                        if (payment is MonthlyBill)
                                        {
                                            <option value="@payment.Id" class="negative">@payment.Name</option>
                                        }
                                        else if (payment is MonthlyIncome)
                                        {
                                            <option value="@payment.Id" class="positive">@payment.Name</option>
                                        }

                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="description">@language.GetText(18)</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="description" name="description" aria-describedby="basic-addon3">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="amount">@language.GetText(17)</label>
                                <div class="input-group">
                                    <input type="number" step="any" class="form-control" id="amount" name="amount" aria-describedby="basic-addon3" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    @language.GetText(1)
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@language.GetText(24)</button>
            </div>
        </div>
    </div>
</div>