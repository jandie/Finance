@using Library.Classes

@{
    ViewBag.Title = "Overview";

    User user = ViewBag.User as User;
}

<h2>Overview</h2>

<div class="row">
    <div class="col-md-12">
        <h3>Balances:</h3>

        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Balance</th>
            </tr>
            </thead>

            <tbody>
            <tr>
                @foreach (BankAccount bankAccount in user.BankAccounts)
                {
                    <td>@bankAccount.Name</td>
                    <td>@bankAccount.Balance.ToString("##.00")</td>
                }
            </tr>
            </tbody>
        </table>

        <h3>Monthly bills:</h3>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Paid?</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    @foreach (ReocurringBill bill in user.Payments.OfType<ReocurringBill>())
                    {
                        <td>@bill.Name</td>
                        <td>@bill.Amount.ToString("##.00")</td>
                    }
                </tr>
            </tbody>
        </table>

        <h3>Monthly income:</h3>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Paid?</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    @foreach (ReocurringIncome income in user.Payments.OfType<ReocurringIncome>())
                    {
                        <td>@income.Name</td>
                        <td>@income.Amount.ToString("##.00")</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
</div>

