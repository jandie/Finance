@using Library.Classes

@{
    ViewBag.Title = "Overview";

    User user = ViewBag.User as User;
}

<h2>Overview</h2>



<div class="row">
    <div>
        <div class="col-md-12">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#balances" aria-controls="home" role="tab" data-toggle="tab">BalanceAmounts</a></li>
                <li role="presentation"><a href="#monthlybills" aria-controls="profile" role="tab" data-toggle="tab">Monthly bills</a></li>
                <li role="presentation"><a href="#monthlyincome" aria-controls="messages" role="tab" data-toggle="tab">Monthly income</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="balances">
                    <h3>BalanceAmounts:</h3>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#AddBalanceAmountModal">
                            Add BalanceAmount
                        </button>
                    </div>

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>BalanceAmount</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (Balance balance in user.BankAccounts)
                            {
                                <tr>
                                    <td>@balance.Name</td>
                                    <td>@balance.BalanceAmount.ToString("0.00")</td>
                                    <td><a class="btn btn-primary" href="~/Manage/Balance?id=@balance.Id" role="button">Manage</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div role="tabpanel" class="tab-pane" id="monthlybills">
                    <h3>Monthly bills:</h3>

                    <div class="form-group">
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#AddMonthlyBill">
                            Add monthly bill
                        </button>
                    </div>

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Amount</th>
                                <th>Paid</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (MonthlyBill bill in user.Payments.OfType<MonthlyBill>())
                            {
                                <tr>
                                    <td>@bill.Name</td>
                                    <td>@bill.Amount.ToString("0.00")</td>
                                    <td>@bill.GetSum().ToString("0.00")</td>
                                    <td><a class="btn btn-primary" href="#" role="button">Manage</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div role="tabpanel" class="tab-pane" id="monthlyincome">
                    <h3>Monthly income:</h3>

                    <div class="form-group">
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#AddMonthlyIncome">
                            Add monthly income
                        </button>
                    </div>

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Amount</th>
                                <th>Paid</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (MonthlyIncome income in user.Payments.OfType<MonthlyIncome>())
                            {
                                <tr>
                                    <td>@income.Name</td>
                                    <td>@income.Amount.ToString("0.00")</td>
                                    <td>@income.GetSum().ToString("0.00")</td>
                                    <td><a class="btn btn-primary" href="#" role="button">Manage</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ModelsPartial")
