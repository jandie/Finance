@{
    ViewBag.Title = "Log in";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2>@ViewBag.Title</h2>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label for="email">Email:</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="email" name="email" aria-describedby="basic-addon3">
                </div>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="password" name="password" aria-describedby="basic-addon3">
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">
                    Login
                </button>
            </div>

            <p>Geen account? @Html.ActionLink("Start hier", "Register", "Account")</p>
        }
    </div>
</div>

