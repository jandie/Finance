@using FinanceLibrary.Classes.Language
@using Finance_Website.Models.Utilities
@{
    SessionUtility userUtility = Session["UserUtility"] as SessionUtility;
    Language language = userUtility?.Language;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Finance</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/Icon/favicon.ico" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top primary-background">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle primary-content" data-toggle="collapse" data-target=".navbar-collapse" style="background-color: #ffffff;">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WhatPays.Me", "Index", "Account", new { area = "" }, new { @class = "navbar-brand primary-content" })
            </div>
            <div class="navbar-collapse collapse primary-content">
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <div id="ErrorAlert" class="alert alert-danger alert-dismissible" role="alert" style="display:none;">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div id="ErrorMessage"></div>
        </div>
        <div id="SuccessAlert" class="alert alert-success alert-dismissible" role="alert" style="display:none;">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div id="SuccessMessage"></div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p><a href="https://github.com/jandie/Finance">GitHub of this project</a></p>
            <p>&copy; 2016 - @DateTime.Now.Year</p>
            <p>Jandie Hendriks Finance</p>
        </footer>
    </div>
    <div id="loader"></div>

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
    <script src="~/Scripts/jquery.flot.min.js"></script>
    <script src="~/Scripts/UserDisplay.js"></script>
</body>
</html>