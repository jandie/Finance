@using FinanceLibrary.Classes
@using FinanceLibrary.Classes.Language
@using Finance_Website.Models.Utilities
@{
    const string classActive = "Class=active";
    const string active = "active in";

    SessionUtility userUtility = Session["UserUtility"] as SessionUtility;
    User user = userUtility.User;
    Language language = userUtility.Language;

    ViewBag.Title = $"{user.Name.Trim()}'s {language.GetText(11)}";
}
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading">@language.GetText(12)</div>

            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>@language.GetText(71)</th>
                    <td>@user.TotalBalance.ToString("0.00")</td>
                </tr>

                <tr>
                    <th>@language.GetText(66)</th>
                    <td>@user.Prediction.ToString("0.00")</td>
                </tr>

                <tr>
                    <th>@language.GetText(67)</th>
                    <td>@user.ToPay.ToString("0.00")</td>
                </tr>

                <tr>
                    <th>@language.GetText(68)</th>
                    <td>@user.ToGet.ToString("0.00")</td>
                </tr>
                </tbody>
            </table>
        </div>

    </div>
    <div class="col-xs-12 col-sm-6 col-md-8">
        <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading">Balance History</div>
            <!-- Graph HTML -->
            <div id="graph-wrapper">
                <div class="graph-container center-block">
                    <div id="graph-lines"></div>
                </div>
            </div>
            <!-- end Graph HTML -->
        </div>
    </div>
</div>

@{
    int[,] graphDataC = new int[user.BalanceHistories.Count, 2];

    int counter = 0;

    foreach (BalanceHistory balanceHistory in user.BalanceHistories)
    {
        graphDataC[counter, 1] = Convert.ToInt32(balanceHistory.Amount);
        graphDataC[counter, 0] = counter;

        counter++;
    }
}

<script>
    var dataArray = @Html.Raw(Json.Encode(graphDataC));
    var size = @counter;
    var x = new Array(size);
    for (var i = 0; i < size; i++) {
        x[i] = new Array(2);
    }

    var arrayCounterX = 0;
    var arrayCounterY = 0;


    for (var i = 0; i < dataArray.length; i++) {
        x[arrayCounterX][arrayCounterY] = dataArray[i];

        arrayCounterY += 1;

        if (arrayCounterY === 2) {
            arrayCounterY = 0;
            arrayCounterX += 1;
        }
    }

    // Graph Data
    var graphData = [{
            // Visits
            data: x,
            color: '#71c73e'
        }
    ];
</script>

<div class="row">
<div class="col-md-12">
<!-- Nav tabs -->
<ul class="nav nav-pills nav-justified" role="tablist">
    <li role="presentation" @if (userUtility.LastTab == null)
                            {
                                @classActive
                            }>
        <a href="#overview" aria-controls="overview" role="tab" data-toggle="tab">
            <span class="glyphicon glyphicon-menu-hamburger icon-content" aria-hidden="true"></span>@language.GetText(13)</a>
    </li>
    <li role="presentation" @if (userUtility.LastTab == "1")
                            {
                                @classActive
                            }>
        <a href="#balances" aria-controls="balances" role="tab" data-toggle="tab">
            <span class="glyphicon glyphicon-briefcase icon-content" aria-hidden="true"></span>@language.GetText(14)</a>
    </li>
    <li role="presentation" @if (userUtility.LastTab == "2")
                            {
                                @classActive
                            }>
        <a href="#monthlybills" aria-controls="monthlybills" role="tab" data-toggle="tab">
            <span class="glyphicon glyphicon-arrow-up icon-content negative" aria-hidden="true"></span>@language.GetText(15)</a>
    </li>
    <li role="presentation" @if (userUtility.LastTab == "3")
                            {
                                @classActive
                            }>
        <a href="#monthlyincome" aria-controls="monthlyincome" role="tab" data-toggle="tab">
            <span class="glyphicon glyphicon-arrow-down icon-content positive" aria-hidden="true"></span>@language.GetText(16)</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
<div role="tabpanel" class="tab-pane fade @if (userUtility.LastTab == null)
                                     {
                                         userUtility.LastTab = null;
                                         Session["UserUtility"] = userUtility;
                                         @active
                                     }" id="overview">
    <button type="button" class="body-content btn btn-success" data-toggle="modal" data-target="#QuickTransaction">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> @language.GetText(1)
    </button>

    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">@language.GetText(13)</div>

    </div>

    <div class="panel-group" id="accordion">
        @foreach (Transaction transaction in user.TransactionList)
        {
            string href = $"#transaction{transaction.Id}";
            string id = $"transaction{transaction.Id}";

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        @if (transaction.Positive)
                        {
                            <a data-toggle="collapse" data-parent="#accordion" href="@href">
                                <span class="glyphicon glyphicon-plus positive" aria-hidden="true"></span> @transaction.Amount.ToString("0.00")</a>
                        }
                        else
                        {
                            <a data-toggle="collapse" data-parent="#accordion" href="@href">
                                <span class="glyphicon glyphicon-minus negative" aria-hidden="true"></span> @transaction.Amount.ToString("0.00")</a>
                        }
                    </h4>
                </div>
                <div id="@id" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-10">
                                <p>
                                    <strong>@language.GetText(18)</strong> @transaction.Description</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 pull-right">
                                <div class="btn-group">
                                    <a class="btn btn-primary btn-sm" role="button" href="~/Manage/Transaction?id=@transaction.Id">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                    <a class="btn btn-danger btn-sm" role="button" href="~/Manage/DeleteTransaction?id=@transaction.Id&quick=true">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<div role="tabpanel" class="tab-pane fade @if (userUtility.LastTab == "1")
                                     {
                                         userUtility.LastTab = null;
                                         Session["UserUtility"] = userUtility;
                                         @active
                                     }" id="balances">

    <button type="button" class="body-content btn btn-success" data-toggle="modal" data-target="#AddBalanceModal">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> @language.GetText(1)
    </button>

    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">@language.GetText(14)</div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>@language.GetText(19)</th>
                    <th>@language.GetText(21)</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                @foreach (Balance balance in user.Balances)
                {
                    <tr>
                        <td>@balance.Name</td>
                        <td>@balance.BalanceAmount.ToString("0.00")</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary btn-sm" role="button" href="~/Manage/Balance?id=@balance.Id&lastTab=1">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div role="tabpanel" class="tab-pane fade @if (userUtility.LastTab == "2")
                                     {
                                         userUtility.LastTab = null;
                                         Session["UserUtility"] = userUtility;
                                         @active
                                     }" id="monthlybills">
    <button type="button" class="body-content btn btn-success" data-toggle="modal" data-target="#AddMonthlyBill">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> @language.GetText(1)
    </button>
    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">@language.GetText(15)</div>
        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>@language.GetText(19)</th>
                    <th>@language.GetText(17)</th>
                    <th>@language.GetText(20)</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (MonthlyBill bill in user.Payments.OfType<MonthlyBill>())
                {
                    decimal totalAmount = bill.GetTotalAmount();
                    decimal amount = bill.Amount;
                    int percentage = amount == 0 ? 100 : Convert.ToInt32(totalAmount / (amount) * 100);
                    string percentageString = (percentage > 100 ? 100 : percentage) + "%";

                    <tr>
                        <td>@bill.Name</td>
                        <td>@amount.ToString("0.00")</td>
                        <td>@totalAmount.ToString("0.00")</td>
                        <td>
                            <div class="btn-group-vertical">
                                <a class="btn btn-primary btn-sm" role="button" href="~/Manage/Payment?id=@bill.Id&lastTab=2">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="btn btn-success btn-sm" role="button" href="~/Action/Transaction?paymentId=@bill.Id&lastTab=2">
                                    <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span></a>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="4">
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100" style="margin-bottom: 0px; width: @percentageString">
                                    @percentage %
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div role="tabpanel" class="tab-pane fade @if (userUtility.LastTab == "3")
                                     {
                                         userUtility.LastTab = null;
                                         Session["UserUtility"] = userUtility;
                                         @active
                                     }" id="monthlyincome">


    <button type="button" class="body-content btn btn-success" data-toggle="modal" data-target="#AddMonthlyIncome">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> @language.GetText(1)
    </button>
    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">@language.GetText(16)</div>
        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>@language.GetText(19)</th>
                    <th>@language.GetText(17)</th>
                    <th>@language.GetText(20)</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                @foreach (MonthlyIncome income in user.Payments.OfType<MonthlyIncome>())
                {
                    decimal totalAmount = income.GetTotalAmount();
                    decimal amount = income.Amount;
                    int percentage = amount == 0 ? 100 : Convert.ToInt32(totalAmount / (amount) * 100);
                    string percentageString = (percentage > 100 ? 100 : percentage) + "%";

                    <tr>
                        <td>@income.Name</td>
                        <td>@income.Amount.ToString("0.00")</td>
                        <td>@income.GetTotalAmount().ToString("0.00")</td>
                        <td>
                            <div class="btn-group-vertical">
                                <a class="btn btn-primary btn-sm" role="button" href="~/Manage/Payment?id=@income.Id&lastTab=3">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a class="btn btn-success btn-sm" role="button" href="~/Action/Transaction?paymentId=@income.Id&lastTab=3">
                                    <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span></a>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="4">
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100" style="margin-bottom: 0px; width: @percentageString">
                                    @percentage %
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>
</div>

